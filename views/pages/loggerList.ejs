<div class="container-fluid bg-dark text-light">
  <div class="row">
    <div class="col-4 px-5  offset-8">
      <form action="/logs/showFilter" method="post">
        <div class="form-group">
          <label for="loglevel">
            <h2 class="text-warning">Select Log Level</h2>
          </label>
          <select
            class="form-control"
            name="loglevel"
            id="loglevel"
            onchange="this.form.submit()"
          >
            <option>Select</option>
            <option>info</option>
            <option>error</option>
            <option>warn</option>
            <option>debug</option>
            <option>silly</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 m-5 ">
      <table id="myTable" class="table table-sm ">
        <thead class="">
          <tr>
            <th>#</th>
            <th>Timestamp</th>
            <th>Level</th>
            <th>Message</th>
          </tr>
        </thead>

        <tbody>
          <% for(var i=0; i < logs.length; i++) { %>
          <tr>
            <td><%= i+1%></td>
            <td class="text-success"><%= logs[i].timestamp %></td>
            <td class="text-danger"><%= logs[i].level %></td>
            <td>
              <%=logs[i].message%>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <table id="myTable1" class="table table-sm ">
          <thead class="">
            <tr>
              <th>number</th>
              <th>Name</th>
              <th>Details</th>
            </tr>
      <tbody>
        <% for(var i=0; i < dtails.length; i++) { %>
        <tr>
          <td><%= i+1%></td>
          <td class="text-success"><%= dtails[i].name %></td>
          <td class="text-danger"><%= dtails[i].detail %></td>
        </tr>
        <% } %>
      </tbody>
    </table>

    </div>
  </div>
</div>


